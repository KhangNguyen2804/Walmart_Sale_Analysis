
CREATE TABLE `walmart`.sale_temp (
  invoice_id VARCHAR(30) NOT NULL,
  branch VARCHAR(5) NOT NULL,
  city VARCHAR(30) NOT NULL,
  customer_type VARCHAR(30) NOT NULL,
  gender VARCHAR(10) NOT NULL,
  product_line VARCHAR(100) NOT NULL,
  unit_price DECIMAL(10,2) NOT NULL,
  quantity INT NOT NULL,
  VAT FLOAT(6,4) NOT NULL,
  total double NOT NULL,
  `date` DATETIME  NOT NULL,
  `time` TIME NOT NULL,
  payment_method DECIMAL(10,2) NOT NULL,
  cogs DECIMAL(10,2) NOT NULL,
  gross_margin_percentage FLOAT(11,9) NOT NULL,
  gross_income DECIMAL(10,2) NOT NULL,
  rating FLOAT(2,1) NOT NULL
);


ALTER TABLE walmart.sale_temp
MODIFY column total DECIMAL(10,2) NOT NULL;

ALTER TABLE walmart.sale_temp
MODIFY COLUMN payment_method VARCHAR(15) NOT NULL;

SELECT *
FROM walmart.sale_temp


        -- SALE_TEMP--
SELECT * FROM walmart.sale_temp
LIMIT 50;

SET sql_mode = (SELECT REPLACE(@@sql_mode, 'ONLY_FULL_GROUP_BY',''));
SET SQL_SAFE_UPDATES = 0;
--  Feature engineering --
# time of day: to give insight of sales in the Morning, Afternoon, Evening
USE walmart;

SELECT time, 
	(
		CASE
			WHEN `time` BETWEEN "00:00:00" AND "12:00:00" THEN 'Morning'  
			WHEN `time` BETWEEN "12:01:00" AND "16:00:00" THEN 'Afternoon'  
            ELSE "Evening"
            
		END
    ) as time_of_date
FROM sale_temp;

# adding time_of_date column into the table

ALTER TABLE sale_temp
ADD COLUMN time_of_day VARCHAR(20);
  
	UPDATE sale_temp
	SET time_of_day = (
		CASE
			WHEN `time` BETWEEN "00:00:00" AND "12:00:00" THEN 'Morning'  
			WHEN `time` BETWEEN "12:01:00" AND "16:00:00" THEN 'Afternoon'  
            ELSE "Evening"
            
		END
    );
 
							-- ADDING day_name --
SELECT date, DAYNAME(date) AS day_name
FROM sale_temp;

ALTER TABLE sale_temp 
ADD COLUMN  day_name VARCHAR (10); 	

UPDATE sale_temp
SET day_name = DAYNAME(date);


select * from sale_temp
GROUP BY day_name;

						--  ADDING month_name --
SELECT date, MONTHNAME(date)
FROM sale_temp;                                                
	
    ALTER TABLE sale_temp 		ADD COLUMN month_name VARCHAR(10);
	
		UPDATE sale_temp
		SET month_name = MONTHNAME(date);
        
SELECT * FROM sale_temp
LIMIT 20;



						-- ----------------EXPLATORY DATA ANALYSIS--------------------- --
                        
                        -- ---------------- PRODUCTS --------------------- --
                        
	# How many unique cities does the data have? 
SELECT DISTINCT(city)
FROM sale_temp;
	# In which city is each branch?
SELECT DISTINCT city, branch
FROM sale_temp
ORDER BY 2 ASC;
	
    # How many unique product lines does the data have?
    
SELECT DISTINCT product_line
FROM sale_temp
ORDER BY product_line;

	# What is the most common payment method?
    
SELECT payment_method,
COUNT(*) AS payment_method_recurrence
FROM sale_temp
GROUP BY payment_method 
ORDER BY payment_method_recurrence DESC
LIMIT 1;

	-- ----------- What is the most selling product line? ----------- --
SELECT product_line, 
	COUNT(*) AS top_product_line
FROM sale_temp
	GROUP BY product_line
    ORDER BY top_product_line DESC
    LIMIT 1;
    
    -- ----------- What is the total revenue by month? ----------- --
SELECT month_name AS `month`,
	SUM(total) AS total_revenue
FROM sale_temp
	GROUP BY month_name
    ORDER BY total_revenue;

	-- ----------- What month had the largest COGS(costs of goods sold)? ----------- --

SELECT month_name AS `month`,
	SUM(cogs) as largest_cogs
FROM sale_temp
	GROUP BY 1
    ORDER BY largest_cogs DESC
    LIMIT 1;

	-- ----------- What product line had the largest revenue? ----------- --
    
SELECT product_line,
	SUM(total) as largest_revenue
FROM sale_temp
	GROUP BY 1
	ORDER BY largest_revenue DESC
	LIMIT 1;
    
	-- ----------- What is the city with the largest revenue? ----------- --
    
SELECT city,
	SUM(total) as largest_revenue
FROM sale_temp
	GROUP BY 1
    ORDER BY largest_revenue DESC
    LIMIT 1;
    
    -- ----------- What product line had the largest VAT? ----------- --
    # highest AVERAGE VAT 
    
SELECT product_line,
	ROUND(avg(VAT),2) as largest_VAT
FROM sale_temp
	GROUP BY 1
    ORDER BY largest_VAT DESC;
   
    
    
-- Fetch each product line and add a column to those product line showing "Good", "Bad". Good if its greater than average sales --

SELECT product_line,
		AVG(total) AS average_sale,
		CASE 
        WHEN AVG(total) > (SELECT AVG(total)FROM sale_temp) 
        THEN "GOOD"
        ELSE "BAD"
			END AS performance
    FROM sale_temp
    GROUP BY product_line;
    
	-- ----------- Which branch sold more products than average product sold? ----------- --

SELECT branch,
	SUM(quantity) as qty,
    AVG(quantity) as average_product_sold
FROM sale_temp
GROUP BY branch
HAVING SUM(quantity) > AVG(quantity);

	-- ----------- What is the most common product line by gender? ----------- --

SELECT product_line, gender,
COUNT(*) as common_product
FROM sale_temp
GROUP BY 1,2
ORDER BY common_product DESC;

	-- ----------- What is the average rating of each product line? ----------- --
    
SELECT product_line,
ROUND(AVG(rating),3) AS average_rating
FROM sale_temp
GROUP BY product_line
ORDER BY average_rating DESC;


					-- ------------------------------------- SALES ------------------------------------- --
                    
	-- ---------------- Number of sales made in each time of the day per weekday --------------------- --
                    

SELECT COUNT(*) as total_sale,
time_of_day, day_name
FROM sale_temp
WHERE LOWER(day_name) NOT IN ("sunday","saturday")
GROUP BY 2,3
ORDER BY 1 DESC;



	
    -- ---------------- Which of the customer types brings the most revenue? --------------------- --

SELECT customer_type,
SUM(total) AS highest_revenue
FROM sale_temp
GROUP BY 1
ORDER BY highest_revenue DESC;

	-- ---------------- Which city has the largest tax percent/ VAT (Value Added Tax)? --------------------- --
    
SELECT  branch,city,
ROUND(AVG(VAT),2) AS largest_VAT
FROM sale_temp
GROUP BY city
ORDER BY largest_VAT DESC;


	-- ---------------- Which customer type pays the most in VAT? --------------------- --
    
SELECT customer_type,
	round(AVG(VAT),2)as VAT
FROM sale_temp
GROUP BY customer_type
ORDER BY VAT DESC;

		-- ------------------------------------- CUSTOMERS ------------------------------------- --
        
	-- ---------------- How many unique customer types does the data have? --------------------- --

SELECT DISTINCT customer_type FROM sale_temp;


	-- ---------------- How many unique payment methods does the data have? --------------------- --
    
SELECT DISTINCT payment_method FROM sale_temp;

	-- ----------------  What is the most common customer type? --------------------- --
SELECT customer_type, 
COUNT(*) AS common_customer_type
FROM sale_temp
GROUP BY 1
ORDER BY 2 DESC
LIMIT 1;
	-- ----------------  Which customer type buys the most? --------------------- --
    
SELECT customer_type,
COUNT(*) AS cnt
FROM sale_temp
GROUP BY 1;
	-- ----------------  What is the gender of most of the customers? --------------------- --
    
SELECT gender,
COUNT(*) AS total_customer
FROM sale_temp
GROUP BY 1;

	-- ----------------  What is the gender distribution per branch? --------------------- --
    
SELECT  branch,gender,
COUNT(*) AS gender_count
FROM sale_temp
GROUP BY  branch, gender
ORDER BY branch;

	-- ----------------  Which time of the day do customers give most ratings? --------------------- --
# check the QUANTITY of the ratings
SELECT time_of_day, 
COUNT(rating)AS most_rating  
FROM sale_temp
GROUP BY 1
ORDER BY 2 DESC;
# check the QUALITY/AVERAGE VALUE of the ratings
SELECT time_of_day, 
AVG(rating)AS most_rating  
FROM sale_temp
GROUP BY 1
ORDER BY 2 DESC;

	-- ----------------  Which time of the day do customers give most ratings per branch? --------------------- --
SELECT branch, time_of_day,
COUNT(*)AS most_rating  
FROM sale_temp
GROUP BY 1,2
ORDER BY 1 ASC;

	-- ----------------  Which day of the week has the best avg ratings? --------------------- --

SELECT day_name,
ROUND(AVG(rating),3) as average_rating
FROM sale_temp
GROUP BY 1
ORDER BY 2 DESC;

	-- ----------------  Which day of the week has the best average ratings per branch? --------------------- --
    
SELECT branch,day_name,average_rating	
FROM
	(SELECT branch,day_name,
		ROUND(AVG(rating),3) AS average_rating,
        ROW_NUMBER() OVER(PARTITION BY branch ORDER BY AVG(rating) DESC)as rank_num
		FROM sale_temp
		GROUP BY 1,2
		) ranked
WHERE RANK_NUM = 1
ORDER BY 1;


